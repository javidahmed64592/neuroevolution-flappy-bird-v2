{
    "app": {
        "name": "Flappy Bird",
        "width": 500,
        "height": 800,
        "fps": 60,
        "font": "freesansbold.ttf",
        "font_size": 24
    },

    "genetic_algorithm": {
        "population_size": 200,
        "mutation_rate": 0.02,
        "lifetime": 100,
        "bird_x": 40,
        "bird_y": 250,
        "bird_size": 40,
        "hidden_layer_sizes": [4],
        "weights_range": [-0.3, 0.3],
        "bias_range": [-0.05, 0.05],
        "shift_vals": 0.001,
        "prob_new_node": 0.001,
        "prob_toggle_connection": 0.001
    }
}
